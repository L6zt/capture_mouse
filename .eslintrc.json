{
   "parserOptions": {
     "ecmaVersion": 6,
     "sourceType": "module"
   },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "globals": {
      "arguments": true
    },
    "rules": {
      "indent": ["error", 2],
      "eqeqeq": "error",
      "quotes": ["error", "single"],
      "no-unused-expressions": "error",
      "no-multi-spaces": "error",
      "no-undef": "error",
      "no-else-return": "error",
      "key-spacing": "error"
    }
}
